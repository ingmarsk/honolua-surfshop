<%= form_for(@product) do |f| %>

  <% if @product.errors.any? %>
    <div id="error_explanation" class="alert alert-danger" role="alert">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :title, placeholder: 'Product Name', class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.text_area :description, rows: 10, class: 'form-control' %>
  </div>
 
  <div class="field">
    <%= f.text_field :image_url, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.text_field :price, size: 20, class: 'form-control' %>
  </div>

  <div type="button" class="btn-group btn-group-sm">
    <%= f.submit 'Save Edit', class: 'btn btn-success' %>
  </div>

<% end %>
