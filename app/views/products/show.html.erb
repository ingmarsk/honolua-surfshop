<section id="product_show">

<div id="error_explanation" class="alert alert-success" role="alert">
	<p id="notice"><%= notice %></p>
</div>

	<div class="product">
		<div class="row">
			<div class="col-md-3">
				<div class="thumbnail">
			  	<img src="<%= @product.image_url %>">
				</div>
			</div>
			<div class="col-md-9">
				<div class="caption">
			    <h5><%= @product.title %></h5>
			    <p><%= @product.description %></p>
			    <h4><span class="label label-success"><%= @product.price %> $</span></h4>
			    <div class="product_controls">
			      <%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-default' %>
			    </div>
			  </div>
			</div>
		</div>
	</div>
</section>