%nav.nav-header.navbar.navbar-inverse.navbar-static-top
  .container-fluid
    .navbar-header
      %a.navbar-brand{:href => '/'} Honolua SurfShop
    .collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        - if current_user
          %li
            %a
              Signed in as
              = current_user.first_name
              [
              = current_user.role
              mode ]
          / %li= link_to 'Users', users_path
          / %li= link_to 'Orders', orders_path
          / %li= link_to 'Create a Product', new_product_path
          %li= link_to 'Log out', logout_path, method: 'delete'
        - else
          %li= link_to 'Login', login_path
          %li= link_to 'Signup', signup_path